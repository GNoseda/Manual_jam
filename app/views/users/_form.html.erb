<%= form_with(model: user, :html => {:class => "form-horizontal center"} ,  local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field form-group row">
    <%= form.label :Nombre, class: "col-1" %>
    <%= form.text_field :name, class: "form-control col-6"%>
  </div>

  <div class="field form-group row">
    <%= form.label :email, class: "col-1" %>
    <%= form.email_field :email, class: "form-control col-6" %>
  </div>

  <div class="field form-group row">
    <%= form.label :password, "Contraseña",class: "col-1" %>
    <%= form.password_field :password, class: "form-control col-6" %>
  </div>

  <div class="field form-group row">
    <%= form.label :password_confirmation, "Repetir contraseña", class: "col-1" %>
    <%= form.password_field :password_confirmation, class: "form-control col-6" %>
  </div>

  <br>
  <div class="actions">
    <%= form.submit "Crear usere", class: "btn"%>
  </div>
<% end %>
